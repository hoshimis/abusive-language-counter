<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.recognition.RecognitionFragment">

    <!--    現在の音声認識状態を表示する（開発用）-->
    <TextView
        android:id="@+id/text_Recognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="準備中"
        android:textAlignment="center"
        android:textSize="32sp" />

    <!--    以下が音声入力された物を表示＆音声入力開始＆音声入力停止（開発用）-->
    <TextView
        android:id="@+id/recognize_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Default"
        android:textSize="32sp" />

    <!--    以下が音声入力された物を表示＆音声入力開始＆音声入力停止-->
    <TextView
        android:id="@+id/count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="回数"
        android:textSize="40dp" />


    <!--    開始ボタン、停止ボタン-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="300dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recognize_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"

            />

        <Button
            android:id="@+id/recognize_stop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop" />

    </LinearLayout>

</LinearLayout>