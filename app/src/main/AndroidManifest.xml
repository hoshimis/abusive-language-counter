<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.main">
    <!-- 音声入力を許可する -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--
    Speech Recognizerでは温帯んでの音声入力とオフラインでの音声入力両方に対応している
        オンラインで音声入力できるようにするために以下のパーミッションも許可しておく
    -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Speech Recognizerを使うための記述ここから -->
    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Appnav">
        <activity android:name=".ui.bbs.ReplyActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>